<%= form_with model: @movie do |f| %>
    <%= f.label 'Título' %>
    <%= f.text_field :title %> <br>

    <%= f.label 'Ano de lançamento' %>
    <%= f.number_field :year %> <br>

    <%= f.label 'Sinopse' %>
    <%= f.text_area :synopsis %> <br>

    <%= f.label 'País de origem' %>
    <%= f.text_field :country %> <br>

    <%= f.label 'Duração (min)' %>
    <%= f.number_field :duration %> <br>

    <%= f.label 'Dirigido por' %>
    <%= f.collection_select :director_id, Director.all, :id, :name %> <br>

    <%= f.label 'Gênero' %>
    <%= f.collection_select :genre_id, Genre.all, :id, :name %> <br>

    <%= f.submit "Editar" %>
<% end %>